# Qdrant (external)
QDRANT_URL=https://qdrant-dgx.e-dani.com
QDRANT_API_KEY=your-qdrant-api-key

# RAG Service
RAG_PORT=5000
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
HF_CACHE=~/.cache/huggingface

# External LLM (for Smart Mode + AI Agent + Classification + Translation)
LLM_BASE_URL=http://host.docker.internal:8000/v1
LLM_API_KEY=not-used

# Shopify (for product catalog indexing)
SHOPIFY_SHOP_DOMAIN=skirmshop-es.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_your_token_here

# Reranker (CrossEncoder for search quality)
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_ENABLED=true

# DevOps docs path (mounted read-only)
# DEVOPS_DOCS_PATH=/devops-docs
